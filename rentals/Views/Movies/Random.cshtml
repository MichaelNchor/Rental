@model rentals.ViewModels.RandomMovieViewModel

@{
    ViewData["Title"] = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Customer.Count > 0 ? "popular" : null;
}

@*Addding comments*@

<h1 class="@className">@Model.Movie.Name</h1>

@if (Model.Customer.Count == 0)
{
    <text>No one has rented this movie</text>
} else { 
<ul>
    @foreach (var customer in Model.Customer)
    {
        <li>@customer.Name</li>
    }
</ul>

}